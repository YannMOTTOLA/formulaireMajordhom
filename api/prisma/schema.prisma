enum Gender {
  MALE
  FEMALE
}

enum Topic {
  VISIT
  CALLBACK
  PICTURES
}

enum Days {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id             String         @id @default(uuid(7))
  gender         Gender
  firstName      String
  lastName       String
  email          String         
  phone          String
  createdAt      DateTime       @default(now())
  messages       Message[]
  availabilities Availability[]
}

model Message {
  id        String   @id @default(uuid(7))
  contact      Contact     @relation(fields: [contactId], references: [id])
  contactId    String
  topic     Topic?   @default(VISIT)
  message   String?  @default("") @db.Text
  createdAt DateTime @default(now())
}

model Availability {
  id        String   @id @default(uuid(7))
  day       Days     @default(MONDAY)
  hour      Int
  minute    Int
  contact      Contact?    @relation(fields: [contactId], references: [id])
  contactId    String?
  createdAt DateTime @default(now())
}
